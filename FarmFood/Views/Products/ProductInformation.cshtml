<!DOCTYPE html>
<html lang="en" class="background_personal_profile" style="overflow-x: hidden;">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/git/pages/styles/style_personal_profile.css">
    <link rel="stylesheet" href="~/git/pages/styles/style_product_information.css">
    <link rel="stylesheet" href="~/git/for_js_scripts/css_for_js/modal_search.css">
    <link rel="stylesheet" href="~/git/for_js_scripts/css_for_js/modal_categories.css">
    <link rel="icon" href="~/git/pages//images/farmfood_logo.svg" type="image/x-icon">
    <title>Информация о товаре</title>
</head>
<body style="position: absolute;">
    <div class="init_app_navigation" style="left: 110px;">
        <div id="website_name" onclick="location.href='/'">Farmfood</div>
        <div class="panel_app_navigation">
            <img src="~/git/pages/images/magnifier.png">
            <input type="button" value="Поиск" id="search">
            <input type="button" value="Каталог" id="categories">
            <input type="button" value="Корзина" onclick="location.href='/ShopCart/'">
            <input type="button" value="Личный кабинет" onclick="location.href='/Account/PersonalProfile'">
        </div>
        <input id="last_button" type="button" value="Разместить объявление" onclick="location.href='/Products/NewAdvertisementCategory'">
    </div>
    <div class="general_information">
        <div class="product_information">
            <h2>@Model.name</h2>
            <p>Цена за 1 шт.</p>
            <div class="row_of_panels">
                <div>@Model.price руб</div>
                <input type="button" value="Добавить в корзину" onclick="location.href='/ShopCart/redirectToCart/@Model.id'">
            </div>
            <div class="information_line_1">
                <img src="~/git/pages/images/user_icon.svg">
                <p>Продавец</p>
                <p>@Model.sellerName </p>
            </div>
            <div class="information_line_2">
                <img src="~/git/pages/images/shopping_cart.svg">
                <p>Товара в наличии: @Model.quantity</p>
            </div>
            <p>Описание товара</p>
            <div class="description_field">@Model.desc</div>
        </div>
        <div class="product_image_panel" style="background-image: url(@Model.img);">
            <div id="btn_left">
                <input type="button" value="">
                <img src="~/git/pages/images/vector_left.svg">
            </div>
            <div id="btn_right">
                <input type="button" value="" id="btn_right">
                <img src="~/git/pages/images/vector_right.svg">
            </div>
        </div>
    </div>
    <div class="product_location">
        <p>Страна производства</p>
        <p>Россия</p>
    </div>
    <div class="product_location">
        <p>Город</p>
        <p>@Model.cityOfOrigin</p>
    </div>
    <script src="~/git/for_js_scripts/modal.js"></script>
    <script src="~/git/for_js_scripts/create_modal_windows.js"></script>
    <script>
        const cart_link = document.querySelector('[value="Добавить в корзину"]');
        cart_link.addEventListener('click', () => {
            cart_link.value = 'Перейти в корзину';
        })
    </script>
    <script src="~/git/for_js_scripts/picture_change.js"></script>
</body>
</html>